<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="demos.udemybraintrainer.Activities.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:id="@+id/TopBanner">

            <TextView
                android:text="--:--"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtTimer"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.11"
                android:background="#ffff00"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:text="No current question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCurrentQuestion"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.11"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:text="0/0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtScore"
                android:layout_gravity="center_horizontal"
                android:layout_weight="0.11"
                android:textAlignment="center"
                android:textSize="24sp" />
        </LinearLayout>

        <Button
            android:text="@string/start_game"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:id="@+id/btnStartGame"
            android:background="@android:color/holo_green_light"
            android:onClick="startGame"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:textSize="24sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:stretchMode="columnWidth"
            android:layout_gravity="center"
            android:layout_weight="0.59">

            <Button
                android:text="@string/tbc"
                android:tag="TOP-RIGHT"
                android:layout_width="@dimen/squareWidth"
                android:layout_height="@dimen/squareHeight"
                android:background="@android:color/holo_blue_bright"
                android:gravity="center_horizontal|center"
                android:id="@+id/topRightTile"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_gravity="fill"
                tools:visibility="visible"
                android:visibility="invisible"
                android:textAlignment="gravity"
                android:textSize="@dimen/buttonText" />

            <Button
                android:text="@string/tbc"
                android:layout_width="@dimen/squareWidth"
                android:layout_height="@dimen/squareHeight"
                android:background="@android:color/holo_orange_light"
                android:id="@+id/bottomRight"
                android:layout_row="1"
                android:layout_column="0"
                android:gravity="center"
                android:layout_gravity="fill"
                tools:visibility="visible"
                android:visibility="invisible"
                android:textAlignment="gravity"
                android:textSize="@dimen/buttonText" />

            <Button
                android:text="@string/tbc"
                android:layout_width="@dimen/squareWidth"
                android:layout_height="@dimen/squareHeight"
                android:background="@color/colorAccent"
                android:id="@+id/topLeftTile"
                android:layout_row="0"
                android:layout_column="1"
                tools:visibility="visible"
                android:layout_gravity="fill"
                android:visibility="invisible"
                android:textAlignment="center"
                android:gravity="center_horizontal|center"
                android:textSize="@dimen/buttonText" />

            <Button
                android:text="@string/tbc"
                android:layout_width="@dimen/squareWidth"
                android:layout_height="@dimen/squareHeight"
                android:background="@android:color/holo_green_light"
                android:id="@+id/bottomLeft"
                android:layout_row="1"
                android:layout_gravity="fill"
                android:layout_column="1"
                tools:visibility="visible"
                android:visibility="invisible"
                android:textAlignment="gravity"
                android:textSize="@dimen/buttonText" />

        </GridLayout>

    </LinearLayout>
</RelativeLayout>
